@page "/"
@using Microsoft.JSInterop
@inject IJSRuntime JSRuntime
@inject NavigationManager _navManager
@inherits FragmentNavigationBase

<body id="page-top">

    <nav class="navbar navbar-light navbar-expand-md navbar navbar-expand-lg fixed-top" id="mainNav">
        <div class="container"><a class="navbar-brand" href="#">FocusHub</a><button
                data-toggle="collapse" class="navbar-toggler navbar-toggler-right" data-target="#navbarResponsive"
                type="button" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"
                value="Menu"><i class="fa fa-bars"></i></button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="nav navbar-nav ml-auto">
                    <li class="nav-item nav-link js-scroll-trigger hover:scale-110"><a class="nav-link active js-scroll-trigger"
                            href="#about">About</a></li>
                    <li class="nav-item nav-link js-scroll-trigger"><a class="nav-link js-scroll-trigger"
                            href="#download">download</a></li>
                    
                    <li class="nav-item nav-link js-scroll-trigger"><a class="nav-link js-scroll-trigger"
                        href="#contact">contact</a></li>
                    
                    

                </ul>
            </div>
        </div>
    </nav>
    <header class="masthead" style="background-image:url('assets/img/intro-bg.jpg');">
        <div class="intro-body">
            <div class="container" id="introHeader">
                <div class="row" >
                    <div class="col-lg-8 mx-auto">
                        <h1 class="brand-heading">FocusHub</h1>
                        <p class="intro-text">A collection of experimental web apps &amp; features.</p><a
                            class="btn btn-link btn-circle" id="goToAbout" role="button" href="#about"><i
                                class="fa fa-angle-double-down animated"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <section id="about" class="content-section text-center">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <h2>About focushub</h2>
                    <p>FocusHub is a collaboration between two dedicated, curious, and passionate developers hoping to
                        learn something new.</p>
                </div>
            </div>
        </div>
    </section>
    <section id="download" class="download-section content-section text-center"
        style="background-image:url('assets/img/downloads-bg.jpg');">
        <div class="container">
            <div class="col-lg-8 mx-auto">
                <h1>view our apps</h1>
                <p>You can view and play with any of our apps via the Apps page</p><button
                    class="btn btn-primary btn-lg btn-default" type="button">visit apps page</button>
            </div>
        </div>
    </section>
    <section id="contact" class="content-section text-center">
        <div class="container">
            <div class="row" id="contactRow">
                <div class="col-lg-8 mx-auto">
                    <h2>Contact us</h2>
                    <p>Feel free to leave us a comment!</p>
                    <ul class="list-inline banner-social-buttons">
                        <li class="list-inline-item">&nbsp;<button class="btn btn-primary btn-lg btn-default"
                                type="button"><i class="fa fa-github fa-fw"></i><span
                                    class="network-name">&nbsp;github</span></button></li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    
    <div class="map-clean"><iframe allowfullscreen="" frameborder="0"
            src="https://cdn.bootstrapstudio.io/placeholders/map.html" width="100%" height="450"></iframe></div>
    <footer>
        <div class="container text-center">
            <p>Copyright ©&nbsp;FocusHub 2021</p>
        </div>
    </footer>

</body>

